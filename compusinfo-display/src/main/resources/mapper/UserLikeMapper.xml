    <select id="selectWeekLikeNumIndicator" resultType="java.lang.Integer">
        SELECT count(*) FROM capus_user_like  where liked_post_id= ${id}
            and  date(create_time) >= date_sub(curdate(),interval 7 day);
    </select>

